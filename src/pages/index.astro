---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import ServiceCard from '../components/ServiceCard';
import AccordionFAQ from '../components/AccordionFAQ';
import { services } from '../utils/data';
---

<Layout title="Welcome to Astro.">
    <Hero client:visible />
    <section id="services" class="my-16">
        <h1 class="font-bold text-4xl text-center">Conoce Nuestros Servicios</h1>
        <div class="mt-8 flex flex-wrap gap-8 justify-center lg:justify-start">
            {
                services.map(service => (
                <ServiceCard
                    name={service.name}
                    description={service.description}
                    imgUrl={service.imgUrl}
                    client:visible
                />
                ))
            }   
        </div>
    </section>
    <section id="FAQ" class="my-16">
        <h1 class="font-bold text-4xl text-center my-8">Preguntas Frecuentes</h1>
        <div class="max-w-3xl mx-auto">
            <AccordionFAQ client:visible />   
        </div>
        
    </section>
</Layout>
